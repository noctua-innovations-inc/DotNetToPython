@page "/"

<div class="container @(IsProcessing ? "cursor-wait" : "cursor-default")">
    <h3>Llama 3.2 3B Instruct Demo</h3>

    <textarea @bind="Prompt" placeholder="Enter your prompt here" class="form-control"></textarea>

    <button @onclick="SubmitPrompt" disabled="@IsProcessing" class="btn btn-primary mt-3">
        @if (IsProcessing)
        {
            <span>Processing Prompt...</span>
        }
        else
        {
            <span>Submit Prompt</span>
        }
    </button>

    <p class="mt-3">@GeneratedText</p>
</div>
