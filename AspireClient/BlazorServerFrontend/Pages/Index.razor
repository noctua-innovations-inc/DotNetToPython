@page "/"

<div class="container @(IsProcessing ? "cursor-wait" : "cursor-default")">
    <h3>Llama 3.2 3B Instruct Demo</h3>

    <textarea @bind="Prompt" placeholder="Enter your prompt here" class="form-control"></textarea>

    <button @onclick="SubmitPrompt" disabled="@IsProcessing" class="btn btn-primary mt-3">
        @if (IsProcessing)
        {
            <span>Processing Prompt...</span>
        }
        else
        {
            <span>Submit Prompt</span>
        }
    </button>

    <p class="mt-3">@GeneratedText</p>

    <div class="modal fade" id="loadingModal" tabindex="-1" aria-labelledby="loadingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loadingModalLabel">Processing...</h5>
                </div>
                <div class="modal-body text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Please wait while we process your request.</p>
                </div>
            </div>
        </div>
    </div>
</div>
